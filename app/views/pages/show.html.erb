<div class="content">
  <h1><div data-mercury="full" id="page_title"><%= raw @page.name %></div></h1>
  <%Rails.logger.info "===#{current_user.inspect}"%>
  <div data-mercury="full" id="page_content">
    <%= raw @page.content %>
  </div>
 
</div>
<% if  current_user %>
  <p><%= link_to "Edit Page", "http://"+request.host_with_port + "/editor" +  "/pages/" + @page.id.to_s%> </p>
<%else%>
  <p>Please login <%=link_to "here","/login"%> to edit page.</p>
<%end%>
